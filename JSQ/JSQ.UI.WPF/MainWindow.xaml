                        <Border Grid.Row="2" Grid.Column="0" Width="8" Height="8" CornerRadius="4" Margin="0,0,6,0" VerticalAlignment="Center">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding PostC.StateBrush.Color}"/>
                            </Border.Background>
                        </Border>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0,2">
                            <TextBlock FontWeight="Bold" Text="РџРѕСЃС‚ C"/>
                            <TextBlock Text="{Binding PostC.CurrentExperiment.Name, TargetNullValue='РЎРІРѕР±РѕРґРµРЅ'}"
                                       Foreground="Gray" FontSize="11"/>
                        </StackPanel>
                        <TextBlock Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"
                                   Text="{Binding PostC.AnomalyBadge}" Foreground="#E53935"
                                   FontWeight="Bold" FontSize="11"/>
                    </Grid>
                </GroupBox>

                <!-- РЎРѕСЃС‚РѕСЏРЅРёРµ СЃРёСЃС‚РµРјС‹ -->
                <GroupBox Grid.Row="1" Header="Р—РґРѕСЂРѕРІСЊРµ СЃРёСЃС‚РµРјС‹" Margin="0,0,0,5">
                    <StackPanel Margin="5">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="3">
                            <StackPanel>
                                <TextBlock FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"
                                           Text="{Binding SystemHealth.OverallStatus}"/>
                                <Separator Margin="0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="РљР°РЅР°Р»РѕРІ:"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SystemHealth.TotalChannels}"
                                               HorizontalAlignment="Right" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="OK:" Foreground="Green"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SystemHealth.ChannelsOK}"
                                               HorizontalAlignment="Right" Foreground="Green"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Warning:" Foreground="Orange"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SystemHealth.ChannelsWarning}"
                                               HorizontalAlignment="Right" Foreground="Orange"/>
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Alarm:" Foreground="Red"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SystemHealth.ChannelsAlarm}"
                                               HorizontalAlignment="Right" Foreground="Red"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <TextBlock Margin="0,8,0,0">
                            <Run Text="Samples/s: "/>
                            <Run Text="{Binding SystemHealth.SamplesPerSecond}"/>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- РЎС‚Р°С‚СѓСЃ -->
                <GroupBox Grid.Row="2" Header="РЎС‚Р°С‚СѓСЃ">
                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" Margin="5"/>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Р›РѕРі СЃРѕР±С‹С‚РёР№ (РѕР±С‰РёР№ РґР»СЏ РІСЃРµС… РїРѕСЃС‚РѕРІ) -->
        <GroupBox Grid.Row="3" Header="Р›РѕРі СЃРѕР±С‹С‚РёР№" Margin="5">
            <DataGrid ItemsSource="{Binding LogEntries}"
                      AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Р’СЂРµРјСЏ"    Binding="{Binding Timestamp, StringFormat=HH:mm:ss.fff}" Width="100"/>
                    <DataGridTextColumn Header="РЈСЂРѕРІРµРЅСЊ"  Binding="{Binding Level}"   Width="70"/>
                    <DataGridTextColumn Header="РџРѕСЃС‚"     Binding="{Binding Post}"     Width="50"/>
                    <DataGridTextColumn Header="РСЃС‚РѕС‡РЅРёРє" Binding="{Binding Source}"   Width="90"/>
                    <DataGridTextColumn Header="РЎРѕРѕР±С‰РµРЅРёРµ" Binding="{Binding Message}" Width="*"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                <Setter Property="Background" Value="#FFCDD2"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                <Setter Property="Background" Value="#FFF9C4"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </GroupBox>

        <!-- РЎС‚СЂРѕРєР° СЃРѕСЃС‚РѕСЏРЅРёСЏ -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="A:"/>
                    <Run Text="{Binding PostA.StateBadge}"/>
                    <Run Text="  B:"/>
                    <Run Text="{Binding PostB.StateBadge}"/>
                    <Run Text="  C:"/>
                    <Run Text="{Binding PostC.StateBadge}"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="JSQ v0.1.0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
