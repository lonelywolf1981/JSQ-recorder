<Window x:Class="JSQ.UI.WPF.Views.EventHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="История поста" Height="780" Width="1320"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="TitleBlock" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>

        <WrapPanel Grid.Row="1" Margin="0,0,0,8" VerticalAlignment="Center">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="SearchTextBox" Width="250" Margin="0,0,12,0" ToolTip="Имя, оператор, парт-номер, хладагент"/>

            <TextBlock Text="С:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <DatePicker x:Name="ExperimentsFromDatePicker" Width="130" Margin="0,0,12,0"/>

            <TextBlock Text="По:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <DatePicker x:Name="ExperimentsToDatePicker" Width="130" Margin="0,0,12,0"/>

            <Button Content="Применить" Click="ApplyFilterButton_Click" Padding="12,4" Margin="0,0,8,0"/>
            <Button Content="Сброс" Click="ResetFilterButton_Click" Padding="12,4"/>
        </WrapPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Эксперименты поста" Padding="6">
                <DataGrid x:Name="ExperimentsGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="ExperimentsGrid_SelectionChanged"
                          VirtualizingPanel.IsVirtualizing="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Старт" Binding="{Binding StartDisplay}" Width="140"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding StateDisplay}" Width="85"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="180"/>
                        <DataGridTextColumn Header="Оператор" Binding="{Binding Operator}" Width="110"/>
                        <DataGridTextColumn Header="Part" Binding="{Binding PartNumber}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" x:Name="SelectedExperimentBlock" Margin="0,0,0,8" FontWeight="SemiBold"/>

                <TabControl Grid.Row="1">
                    <TabItem Header="События">
                        <DataGrid x:Name="EventsGrid"
                                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                                  VirtualizingPanel.IsVirtualizing="True">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EventType}" Value="NoData">
                                            <Setter Property="Background" Value="#FFCDD2"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding EventType}" Value="MinViolation">
                                            <Setter Property="Background" Value="#FFF9C4"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding EventType}" Value="MaxViolation">
                                            <Setter Property="Background" Value="#FFF9C4"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding EventType}" Value="DataRestored">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding EventType}" Value="LimitsRestored">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Время" Binding="{Binding Timestamp, StringFormat=dd.MM HH:mm:ss}" Width="130"/>
                                <DataGridTextColumn Header="Канал" Binding="{Binding ChannelName}" Width="120"/>
                                <DataGridTextColumn Header="Тип" Binding="{Binding EventTypeDisplay}" Width="180"/>
                                <DataGridTextColumn Header="Значение" Binding="{Binding Value, StringFormat=F3}" Width="100"/>
                                <DataGridTextColumn Header="Порог" Binding="{Binding Threshold, StringFormat=F3}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="История канала">
                        <Grid Margin="6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="280"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <WrapPanel Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center">
                                <TextBlock Text="Канал:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <ComboBox x:Name="ChannelCombo"
                                          Width="320"
                                          IsEditable="True"
                                          IsTextSearchEnabled="True"
                                          DisplayMemberPath="DisplayName"
                                          Margin="0,0,12,0"/>

                                <TextBlock Text="С:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <DatePicker x:Name="FromDatePicker" Width="130" Margin="0,0,4,0"/>
                                <TextBox x:Name="FromTimeBox" Width="70" Text="00:00:00" Margin="0,0,12,0"/>

                                <TextBlock Text="По:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <DatePicker x:Name="ToDatePicker" Width="130" Margin="0,0,4,0"/>
                                <TextBox x:Name="ToTimeBox" Width="70" Text="23:59:59" Margin="0,0,12,0"/>

                                <Button Content="Загрузить" Click="LoadChannelDataButton_Click" Padding="10,4" Margin="0,0,8,0"/>
                                <Button Content="Весь диапазон" Click="WholeRangeButton_Click" Padding="10,4"/>
                            </WrapPanel>

                            <TextBlock Grid.Row="1" x:Name="RangeInfoBlock" Foreground="Gray" Margin="0,0,0,8"/>

                            <oxy:PlotView Grid.Row="2" x:Name="ChannelPlot" Background="White" Margin="0,0,0,8"/>

                            <DataGrid Grid.Row="3" x:Name="SamplesGrid"
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                                      VirtualizingPanel.IsVirtualizing="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Время" Binding="{Binding Timestamp, StringFormat=dd.MM.yyyy HH:mm:ss.fff}" Width="220"/>
                                    <DataGridTextColumn Header="Значение" Binding="{Binding Value, StringFormat=F4}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <TextBlock x:Name="StatusBlock" VerticalAlignment="Center" Foreground="Gray" Margin="0,0,16,0"/>
            <Button Content="Обновить" Click="RefreshButton_Click" Padding="16,5" Margin="0,0,8,0"/>
            <Button Content="Закрыть" IsCancel="True" Click="CloseButton_Click" Padding="16,5"/>
        </StackPanel>
    </Grid>
</Window>
