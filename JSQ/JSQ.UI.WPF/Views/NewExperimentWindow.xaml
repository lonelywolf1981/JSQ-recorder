<Window x:Class="JSQ.UI.WPF.Views.NewExperimentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:JSQ.UI.WPF.ViewModels"
        mc:Ignorable="d"
        Title="Новый эксперимент"
        SizeToContent="Height"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance vm:NewExperimentViewModel}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название *:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Артикул:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding PartNumber, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Оператор:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding Operator, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Хладагент:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Margin="5,5"
                  IsEditable="True"
                  Text="{Binding Refrigerant, UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem Content="R404a"/>
            <ComboBoxItem Content="R410a"/>
            <ComboBoxItem Content="R134a"/>
            <ComboBoxItem Content="R22"/>
        </ComboBox>

        <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="0,10"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Запустить"
                    Command="{Binding ConfirmCommand}"
                    Padding="20,7" Margin="0,0,10,0"
                    IsDefault="True"/>
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Padding="20,7"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
