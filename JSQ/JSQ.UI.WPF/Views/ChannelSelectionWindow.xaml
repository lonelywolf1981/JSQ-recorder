<Window x:Class="JSQ.UI.WPF.Views.ChannelSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:JSQ.UI.WPF.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="700" Width="1050"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance vm:ChannelSelectionViewModel}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <GroupBox Grid.Row="0" Header="Фильтры" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Grid.Column="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Группа:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding AvailableGroups}"
                              SelectedItem="{Binding SelectedGroup}"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Таблица каналов -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <!-- Список каналов -->
            <GroupBox Grid.Column="0" Header="Каналы">
                <DataGrid ItemsSource="{Binding FilteredChannels}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          SelectionMode="Extended">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsTakenByOtherPost}" Value="True">
                                    <Setter Property="Background" Value="#EEEEEE"/>
                                    <Setter Property="Foreground" Value="#9E9E9E"/>
                                    <Setter Property="FontStyle" Value="Italic"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <!-- Индикатор активности -->
                        <DataGridTemplateColumn Header="●" Width="28">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="#BDBDBD"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Fill" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Чекбокс выбора (заблокирован для занятых каналов) -->
                        <DataGridTemplateColumn Header="✓" Width="40" SortMemberPath="IsSelected">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                              IsEnabled="{Binding CanSelect}"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Канал"   Binding="{Binding Name}"                       Width="80"/>
                        <DataGridTextColumn Header="Значение" Binding="{Binding CurrentValue, StringFormat=F3}" Width="80"/>
                        <DataGridTextColumn Header="Ед."      Binding="{Binding Unit}"                       Width="50"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}"                Width="*"/>
                        <DataGridTextColumn Header="Min" Width="55">
                            <DataGridTextColumn.Binding>
                                <Binding Path="MinLimit" TargetNullValue=""/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Max" Width="55">
                            <DataGridTextColumn.Binding>
                                <Binding Path="MaxLimit" TargetNullValue=""/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <!-- Показываем какой пост занял канал -->
                        <DataGridTemplateColumn Header="Занят" Width="55" SortMemberPath="TakenByPost">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsTakenByOtherPost}" Value="True">
                                                        <Setter Property="Text" Value="{Binding TakenByPost}"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Панель действий -->
            <GroupBox Grid.Column="2" Header="Действия" Margin="5,0,0,0">
                <StackPanel Margin="5">
                    <TextBlock Text="Выбрано каналов:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Margin="0,0,0,5">
                        <Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="Bold" FontSize="16"/>
                        <Run Text="из"/>
                        <Run Text="{Binding AllChannels.Count, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Margin="0,0,0,10" Foreground="Gray" FontSize="11">
                        <Run Text="Показано: "/>
                        <Run Text="{Binding FilteredChannels.Count, Mode=OneWay}"/>
                    </TextBlock>

                    <Button Content="Выбрать все"       Command="{Binding SelectAllCommand}"       Margin="0,5" Padding="5"/>
                    <Button Content="Снять выделение"   Command="{Binding DeselectAllCommand}"     Margin="0,5" Padding="5"/>
                    <Button Content="Инвертировать"     Command="{Binding InvertSelectionCommand}" Margin="0,5" Padding="5"/>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Массовая настройка:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <TextBox Text="{Binding BulkMinLimit}" Margin="0,2" VerticalContentAlignment="Center">
                        <TextBox.ToolTip>Минимальный лимит</TextBox.ToolTip>
                    </TextBox>
                    <TextBox Text="{Binding BulkMaxLimit}" Margin="0,2" VerticalContentAlignment="Center">
                        <TextBox.ToolTip>Максимальный лимит</TextBox.ToolTip>
                    </TextBox>
                    <Button Content="Применить к выбранным"
                            Command="{Binding ApplyBulkLimitsCommand}"
                            Margin="0,5" Padding="5"/>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Пресеты:" FontWeight="Bold" Margin="0,10,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailablePresets}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Name"
                              SelectedValue="{Binding SelectedPresetName}"
                              Margin="0,2"/>
                    <Button Content="Загрузить пресет" Command="{Binding LoadPresetCommand}"  Margin="0,5" Padding="5"/>
                    <Button Content="Сохранить пресет" Command="{Binding SavePresetCommand}"  Margin="0,5" Padding="5"/>
                    <Button Content="Удалить пресет"   Command="{Binding DeletePresetCommand}" Margin="0,5" Padding="5"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Кнопки -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Text="{Binding NewPresetName, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center" Margin="0,0,10,0">
                <TextBox.ToolTip>Введите имя для сохранения пресета</TextBox.ToolTip>
            </TextBox>

            <Button Grid.Column="1" Content="Назначить каналы"
                    Command="{Binding SaveSelectionCommand}"
                    Padding="20,5" Margin="5,0"/>
            <Button Grid.Column="2" Content="Закрыть"
                    Click="CloseButton_Click"
                    Padding="20,5" Margin="5,0"/>
        </Grid>

        <!-- Строка состояния -->
        <StatusBar Grid.Row="3" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Всего каналов: "/>
                    <Run Text="{Binding AllChannels.Count, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Выбрано: "/>
                    <Run Text="{Binding SelectedCount, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
