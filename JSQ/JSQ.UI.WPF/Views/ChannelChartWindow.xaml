<Window x:Class="JSQ.UI.WPF.Views.ChannelChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="{Binding WindowTitle}"
        Width="780" Height="460"
        MinWidth="500" MinHeight="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Текущее значение -->
        <Border Grid.Row="0" Padding="10,7" Background="#F5F5F5"
                BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Текущее значение: " Foreground="Gray"
                           VerticalAlignment="Center" FontSize="13"/>
                <TextBlock Text="{Binding CurrentValueText}" FontSize="14"
                           FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- График -->
        <oxy:PlotView Grid.Row="1" Model="{Binding PlotModel}"
                      Margin="4,4,4,0" Background="White"/>

        <!-- Выбор временного окна -->
        <Border Grid.Row="2" Padding="10,7" Background="#F5F5F5"
                BorderBrush="#DDD" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Окно:" Margin="0,0,10,0"
                           VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>
                <ComboBox ItemsSource="{Binding AvailableWindows}"
                          SelectedItem="{Binding SelectedWindow}"
                          Width="90" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
